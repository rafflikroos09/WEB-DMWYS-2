<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../assets/css/style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;1,100;1,500&display=swap" rel="stylesheet" />
    <link rel="icon" href="../assets/img/logo2.png" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

    <title>Login</title>
  </head>
  <body>
    <!-- NAVBAR -->
    <nav>
      <div class="left">
        <ul>
          <img src="../assets/img/logo2.png" alt="" />
          {{! <li><a href="/home">Home</a></li>
          <li><a href="/blog">My Project</a></li>
          <li><a href="/testi">Testimonial</a></li> }}
        </ul>
      </div>

      <div class="right">
        <ul>
          <li><a href="/register">Register</a></li>
          <a href="/login" class="btn">Login</a>
        </ul>
      </div>

      <div class="hamburger">
        <button style="background-color: transparent; border: none; cursor: pointer" onclick="openHamburger()">
          <i class="fa-solid fa-bars fa-xl"></i>
        </button>
      </div>
    </nav>

    <div id="hamburger-bars-items" class="hamburger-bars-items">
      <a href="/home">Home</a>
      <a href="/blog" class="active">Blog</a>
      <a href="/testi" class="active">Testimonial</a>
      <a href="/register" class="active">Register</a>
      <a href="/login" class="active">Login</a>
      <a href="/contact">Contact</a>
    </div>

    <!-- NAVBAR END -->
    {{! DANGER FROM LOGIN }}
    {{#if messages.danger}}
      <div class="alert-danger">
        <div class="alert-danger-container">
          {{messages.danger}}
        </div>
      </div>
    {{/if}}

    {{#if messages.succses}}
      <div class="alert-succses">
        <div class="alert-succses-container">
          {{messages.succses}}
        </div>
      </div>
    {{/if}}

    <!-- INPUT FORM -->
    <form method="post" action="/login">
      <div class="title">
        <h1>LOG<span>IN</span></h1>
      </div>
      <br />

      <div class="email">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" />
      </div>

      <div class="nama">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" />
      </div>

      <div>
        <button type="submit">Submit</button>
      </div>
    </form>
    <!-- END INPUT FORM -->

    <script src="../assets/js/nav.js"></script>
  </body>
</html>
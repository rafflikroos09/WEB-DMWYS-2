<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Project Detail | Personal web</title>
    <link rel="stylesheet" href="../assets/css/blogdetail.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;1,100;1,500&display=swap" rel="stylesheet" />
    <link rel="icon" href="assets/img/logo2.png" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
  </head>
  <body>
    <!-- NAVBAR -->
    <nav>
      <div class="left">
        <ul>
          <img src="../assets/img/logo2.png" alt="" />
          <li><a href="/home">Home</a></li>
          <li><a href="/blog">My Project</a></li>
          <li><a href="/testi">Testimonial</a></li>
        </ul>
      </div>

      <div class="right">
        <a href="/contact">Contact Me</a>
      </div>

      <div class="hamburger">
        <button style="background-color: transparent; border: none; cursor: pointer" onclick="openHamburger()">
          <i class="fa-solid fa-bars fa-xl"></i>
        </button>
      </div>
    </nav>

    <div id="hamburger-bars-items" class="hamburger-bars-items">
      <a href="/home">Home</a>
      <a href="/blog" class="active">Blog</a>
      <a href="/testi" class="active">Testimonial</a>
      <a href="/contact">Contact</a>
    </div>

    <!-- NAVBAR END -->

    <!-- BLOG -->
    <div class="blog-content">
      {{!-- {{#each data}} --}}
      <div class="blog-image">
        <img src="../assets/img/blog.jpg" alt="" />
      </div>
      <div class="blog-title">
        <h1><a href="/blogdetail">{{this.title}}</a></h1>
        <h5>${dataBlog[index].startDate} s/d ${dataBlog[index].endDate}</h5>
      </div>
      <div class="blog-detail">
        <p class="p-1">{{data.content}}</p>
        <p class="p-2"> ${getFullDate(dataBlog[index].postAt)} | Budi Kroos</p>
        <p class="p-3"> ${dataBlog[index].tech.map((item) => `<i class="${item}"></i>`).join("")}</p>
      </div>
      {{! <div class="btn-group">
        <button class="btn-edit">Edit Post</button>
        <button class="btn-post">Delete Post</button>
      </div> }}
      <div class="blog-time">
        <p class="p-4">${getDistanceTime(dataBlog[index].postAt)}</p>
      </div>
      {{!-- {{/each}} --}}
    </div>
    <!-- BLOG END -->

    <script src="../assets/js/blog.js"></script>
    <script src="../assets/js/blog.js"></script>
  </body>
</html>
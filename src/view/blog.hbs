<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Project | Personal web</title>
    <link rel="stylesheet" href="../assets/css/blog.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;1,100;1,500&display=swap" rel="stylesheet" />
    <link rel="icon" href="../assets/img/logo2.png" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
  </head>
  <body>
    <!-- NAVBAR -->
    <nav>
      <div class="left">
        <ul>
          <img src="../assets/img/logo2.png" alt="" />
          <li><a href="/home">Home</a></li>
          <li><a href="">My Project</a></li>
          <li><a href="/testi">Testimonial</a></li>
        </ul>
      </div>

      <div class="right">
        <ul>
          <li><a href="/register">Register</a></li>
          <li><a href="/login">Login</a></li>
           <a href="/contact" class="btn">Contact Me</a>
        </ul>
      </div>

      <div class="hamburger">
        <button style="background-color: transparent; border: none; cursor: pointer" onclick="openHamburger()">
          <i class="fa-solid fa-bars fa-xl"></i>
        </button>
      </div>
    </nav>

    <div id="hamburger-bars-items" class="hamburger-bars-items">
      <a href="/home">Home</a>
      <a href="/blog" class="active">Blog</a>
      <a href="/testi" class="active">Testimonial</a>
      <a href="/register" class="active">Register</a>
      <a href="/login" class="active">Login</a>
      <a href="/contact">Contact</a>
    </div>

    <!-- NAVBAR END -->
    <!-- ADD MY PROJECT START -->
    <!-- Blog -->
    <!-- Form -->
    <div class="blog">
      <div class="blog-form">
        <div class="form-container">
          <form method="post" action="/blog">
            <h1>Add <span>My Project</span></h1>
            <div>
              <label for="input-blog-title">Project Name</label>
              <input id="input-blog-title" name="title" />
            </div>
            <div class="date">
              <div class="date-2">
                <label for="start" class="start">Start Date</label>
                <input type="date" id="start" name="startDate" />
              </div>

              <div class="date-3">
                <label for="end" class="end">End Date</label>
                <input type="date" id="end" name="endDate" />
              </div>
            </div>
            <div>
              <label for="input-blog-content">Description</label>
              <textarea id="input-blog-content" cols="30" rows="10" name="content"></textarea>
            </div>

            <div class="checkbox">
              <div class="techno"><label>Technologies</label></div>
              <div class="checkbox-item">
                <div class="checkbox-item-1" style="margin-left: 18px" >
                  <input type="checkbox" id="nodejs" name="nodejs" value="fa-brands fa-node-js  " />
                  <label for="node-js">Node JS</label>
                </div>
                <div class="checkbox-item-1" style="margin-left: 18px">
                  <input type="checkbox" id="golang" name="golang" value="a-brands fa-golang " />
                  <label for="golang">Golang</label>
                </div>
              
              </div>

              <div class="checkbox-item">
                <div class="checkbox-item-1" style="margin-left: 18px">
                  <input type="checkbox" id="react-js" name="react" value="fa-brands fa-react  " />
                  <label for="react">React JS</label>
                </div>
                <div class="checkbox-item-1" style="margin-left: 18px">
                  <input type="checkbox" id="javascript" name="js" value="fa-brands fa-js  " />
                  <label for="javascript">Javascript</label>
                </div>
              </div>
            </div>

            <div>
              <label>Upload Image</label>
              <div class="input-blog-image-group">
                <label for="input-blog-image">
                  <p>Attach File</p>
                  <img src="../assets/img/file.png" alt="file" />
                </label>
                <input type="file" id="input-blog-image" hidden />
              </div>
            </div>
            <div class="button-group">
              <button>Submit</button>
            </div>
          </form>
        </div>
      </div>

      {{!-- MY PROJECT --}}

      <hr class="line" />
      <div class="blog-h2">
        <h2>My <span>Project</span></h2>
      </div>

    <div id="contents" class="blog-list">
      {{#each data}}
        <!-- dynamic content would be here -->
        <div class="blog-list-item">
          <div class="blog-content">
            <div class="blog-image">
              <img src="../assets/img/blog.jpg" alt="">
            </div>
            <div class="blog-title">
              <h1><a href="/blogdetail/{{this.id}}" target="_blank">{{this.title}}</a></h1>
              <h5>Durasi : {{this.diff}}</h5> 
            </div>
            <div class="blog-detail">
              <p class="p-1">{{this.content}}</p>
              <p class="p-1">{{this.author}}</p>
            </div>
            <div class="blog-icon">
              {{#if this.js}}
              <img src="../assets/img/js.svg" alt="">
              {{/if}}

              {{#if this.react}}
              <img src="../assets/img/react.svg" alt="">
              {{/if}}

              {{#if this.golang}}
              <img src="../assets/img/golang.svg" alt="">
              {{/if}}

              {{#if this.nodejs}}
              <img src="../assets/img/node.svg" alt="">
              {{/if}}
            </div>
            <div class="btn-group">
              <a class="btn-edit" href="/edit-blog/{{@index}}">Edit Post</a>
              <a class="btn-post" href="/delete-blog/{{this.id}}">Delete Post</a>
            </div>
            <div class="blog-time">
              <p class="p-4"></p>
              {{!-- ${getDistanceTime(dataBlog[index].postAt)} --}}
            </div>
          </div>
      </div>
      {{/each}}        
    </div>
        </div>
      </div>
    </div>
    {{!-- <script src="../assets/js/blog.js"></script> --}}
    <script src="../assets/js/nav.js"></script>
  </body>
</html>
